{
  "workbench.startupEditor": "none",
  "editor.wordWrap": "on",
  "files.autoSaveDelay": 100,
  "liveServer.settings.donotShowInfoMsg": true,
  "terminal.integrated.fontSize": 20,
  "editor.accessibilitySupport": "off",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.fontSize": 18,
  "tailwindCSS.emmetCompletions": true,
  "cSpell.autoFormatConfigFile": true,
  "editor.minimap.showSlider": "always",
  "terminal.integrated.minimumContrastRatio": 3,
  "cSpell.minWordLength": 3,
  "editor.minimap.autohide": true,
  "terminal.integrated.gpuAcceleration": "off",
  "editor.tokenColorCustomizations": {
    "comments": "#7e7e7e" // comment color
  },
  // tis if for colors customize
  "workbench.colorCustomizations": {
    "editor.background": "#212224", // editor background color
    "editorCursor.foreground": "#ffa600", // cursor color
    "editorLineNumber.foreground": "#525252", // line number color
    "editor.selectionBackground": "#588cbd70", // selection color
    "editor.foreground": "#ffffff", // (,) coma color;
    "foreground": "#608686"
  },
  "editor.cursorBlinking": "expand",
  "terminal.integrated.cursorWidth": 0,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "editor.multiCursorLimit": 1000,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "liveServer.settings.donotVerifyTags": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "tabnine.experimentalAutoImports": true,
  "files.refactoring.autoSave": false,
  "emmet.includeLanguages": {
    "https://web.programming-hero.com/web-7/video/web-7-47-1-module-introduction-create-react-app-6-core-concepts": "javascriptreact",
    "javascript": "javascriptreact"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (EEx)",
    "HTML (Eex)",
    "plist"
  ],
  "files.autoSave": "afterDelay",
  "workbench.iconTheme": "material-icon-theme",
  "editor.linkedEditing": true,
  // setUp

  //  prettier Formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.printWidth": 200,
  // import setting
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.sortImports": true,
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "workbench.colorTheme": "Dracula",
  // emmet
  "emmet.triggerExpansionOnTab": true,
  "editor.fontFamily": "'Operator Mono', 'Fira Code', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true
}
